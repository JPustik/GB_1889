{
    "compilerOptions": {
      "plugins": [
        {
          "name": "typescript-plugin-css-modules"
        }
      ],
      "baseUrl": ".",
      "paths": {
        "src/*": [
          "./src/*"
        ],
      },
      
      "target": "es2016",
      "jsx": "react", 
      
      "module": "commonjs", 
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,  
      "skipLibCheck": true 
    },
    "include": [
      "src/**/*",
      "./jest.config.js"
    ]
  }